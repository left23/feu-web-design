{% extends '../_layout.twig' %}

{% block body %}
<body class="{{ sessions.class }}">
<div class="background-image background-image-{{ sessions.class }}"></div>
{% endblock %}

  {% block hero %}

    <div class="hero {{ sessions.class }}">

      <div class="hero__bgimage-overlay"></div>

      <div class="hero__shape">

        <div class="container">
          <h1>{{ sessions.title }}</h1>
          <h3>{{ sessions.subtitle }}</h3>

        </div>

      </div>

    </div>

  {% endblock %}


{% block content %}

<main class="container">

  <section class="sessions sessions__keynote">

    <div class="grid grid-25">

      {% for session in sessions.sessions__keynote %}
        {% include '../../components/03-molecules/session/session-keynote.twig' %}
      {% endfor %}

    </div>

  </section>

  <section class="sessions sessions__other">

    <div class="grid grid-25">
      {% for session in sessions.sessions %}
        {% include '../../components/03-molecules/session/session.twig' %}
      {% endfor %}
    </div>

  </section>

</main>

{% endblock %}


