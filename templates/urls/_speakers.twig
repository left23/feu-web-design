{% extends '../_layout.twig' %}

{% block body %}
<body class="{{ speakers.class }}">
<div class="background-image background-image-{{ speakers.class }}"></div>
{% endblock %}

{% block hero %}

  <div class="hero {{ speakers.class }}">

    <div class="hero__bgimage-overlay"></div>

    <div class="hero__shape">

      <div class="container">
        <h1>{{ speakers.title }}</h1>
        <h3>{{ speakers.subtitle }}</h3>

      </div>

    </div>

  </div>

{% endblock %}

{% block content %}

  <main class="container">

  <section class="speakers speakers__keynote">

    <div class="grid grid-25">

    {% for speaker in speakers.speakers__keynote %}
      {% include '../../components/03-molecules/speaker/speaker-keynote.twig' %}
    {% endfor %}

    </div>

  </section>

  <section class="speakers speakers__other">

    <div class="grid grid-25">

    {% for speaker in speakers.speakers %}
      {% include '../../components/03-molecules/speaker/speaker.twig' %}
    {% endfor %}
    </div>

  </section>

  </main>

{% endblock %}


